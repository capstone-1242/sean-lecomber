---



<div class="flex justify-between flex-wrap m-auto sm:flex-col md:flex-row lg:flex-row">     <!-- Beginning of Container -->
  <ShowDates />
 <!-- End of Written Content -->

    <div id="contact" class="py-8 lg:py-16 mx-auto w-full lg:w-1/3">   
        <h2 class=" w-full mb-4 text-4xl px-4 md:px-0 tracking-tight font-extrabold">Contact Form</h2>

          <!-- Beginning of Form -->
        <form method="POST" id="form" class="py-8 px-4 space-y-8 bg-[#172f43] md:rounded-lg">
            <input type="hidden" name="access_key" value="9ebc1423-6bba-443b-bae6-42bb0e67ad22">
            <div>
                <label for="name" class="block mb-2 text-sm font-medium text-white">Name</label>
                <input type="text" name="name" id="name" class="shadow-sm bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Enter your name here..." required>
            </div>
            <div>
                <label for="email" class="block mb-2 text-sm font-medium text-white">Your email</label>
                <input type="email" name="email" id="email" class="shadow-sm bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Enter your email here..." required>
            </div>
            <div>
                <label for="subject" class="block mb-2 text-sm font-medium text-white">Subject</label>
                <input type="text" name="subject" id="subject"  class="shadow-sm bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Why are you reaching out to Sean?" required>
            </div>
            <div class="sm:col-span-2">
                <label for="message" class="block mb-2 text-sm font-medium text-white">Your message</label>
                <textarea id="message" name="message" rows="6"  class="shadow-sm bg-white border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:focus:ring-primary-500 dark:focus:border-primary-500 dark:shadow-sm-light" placeholder="Message for Sean"></textarea>
            </div>
            <div class="flex justify-center">
                <button type="submit" class=" bg-[#c2d6e8] hover:bg-[#aac4dd] uppercase justify-self-center py-3 px-5 text-sm font-medium text-center text-[#172f43] rounded-lg sm:w-fit hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Get in Touch</button>
            </div>
            <div id="result"></div>
        </form>
       
    </div>     <!-- End of Form -->
</div>  <!-- End of Container -->

<script is:inline>
    const form = document.getElementById('form');
    const result = document.getElementById('result');
    
    form.addEventListener('submit', function(e) {
        const formData = new FormData(form);
        e.preventDefault();
    
        const object = Object.fromEntries(formData);
        const json = JSON.stringify(object);
    
        result.innerHTML = "Please wait..."
    
        fetch('https://api.web3forms.com/submit', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'Accept': 'application/json'
                },
                body: json
            })
            .then(async (response) => {
                let json = await response.json();
                if (response.status == 200) {
                    result.innerHTML = json.message;
                } else {
                    console.log(response);
                    result.innerHTML = json.message;
                }
            })
            .catch(error => {
                console.log(error);
                result.innerHTML = "Something went wrong!";
            })
            .then(function() {
                form.reset();
                setTimeout(() => {
                    result.style.display = "none";
                }, 3000);
            });
    });
    </script>

