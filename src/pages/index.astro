---
import "../styles/global.css";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
// import Banner from '../components/Banner.astro'
import Hero from "../components/Banner.astro";
// import Test from "../components/Test.astro"

// import Card from "../components/Card.astro";
import Gallery from "../components/Gallery.astro";
import Form2 from "../components/Form2.astro";
import Video from "../components/Video.astro";
import Footer from "../components/Footer.astro";

import { testimonials } from '../data/testimonialData';
import TestimonialCard from '../components/TestimonialCard.astro';
---

<Layout>
	<Header />
	<!-- <Banner /> -->
	<Hero />
	<!-- <Test /> -->



	<section class="px-4 py-1">
		<Form2 />
	</section>
	<section class="px-4 py-1">
		<Video />
	</section>
	<section class="px-4 py-1">
		<Gallery />
	</section>
	<!-- Testimonial Grid Section -->

<!-- Heading for Testimonials -->
<h2 class="text-3xl font-semibold mb-4 text-left px-4 py-6">
  Testimonials
</h2>

<!-- Grid of Testimonial Cards -->
<div class="container mx-auto px-4">
	
	<div class="flex flex-wrap justify-center gap-4">
			{testimonials.map((testimonial) => (
					<div class="w-full sm:w-1/3 md:w-1/4 lg:w-1/5 xl:w-1/5 2xl:w-1/6 flex flex-col">
							<TestimonialCard 
									name_event={testimonial.name_event} 
									testimonial={testimonial.testimonial} 
							/>
					</div>
			))}
	</div>
</div>

	
	
	<Footer />
</Layout>

<style is:global>
	body {
		/* background-color: darkslategray; */
		color: white;
		font-family: "Lucida Sans", "Lucida Sans Regular", "Lucida Grande",
			"Lucida Sans Unicode", Geneva, Verdana, sans-serif;
		
	}
	h2,h3,h4,h5,h6{
		color:#172f43;
	}
	.testimonial-heading{
		color:#fff;

	}
	main {
		background-image: url("../assets/background.svg");
	}
</style>
