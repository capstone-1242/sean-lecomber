---
import "../styles/global.css";
import Welcome from "../components/Welcome.astro";
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
// import Banner from '../components/Banner.astro'
import Hero from "../components/Banner.astro";
// import Test from "../components/Test.astro"

// import Card from "../components/Card.astro";
import BackToTop from "../components/BackToTop.astro";
import Gallery from "../components/Gallery.astro";
import Form2 from "../components/Form2.astro";
import Video from "../components/Video.astro";
import Video2 from "../components/Video2.astro"
import Video3 from "../components/Video3.astro"
import Footer from "../components/Footer.astro";

// import { testimonials } from '../data/testimonialData';
import TestimonialCard from '../components/TestimonialCard.astro';

import {sanity} from '../data/sanity'

const query = `*[_type == "testimonials"]{
  _id,
  nameEvent,
  testimonial
}`;


const testimonials = await sanity.fetch(query);
---

<Layout>
	<Header />
	<!-- <Banner /> -->
	<Hero />
	<!-- <Test /> -->



	<section id="show-dates" class="py-1">
		<Form2 />
	</section>
	<section id="about">
		<Video2 />
	</section>
	<section class="py-1 max-w-[1536px] mx-auto px-4">
		<Gallery />
	</section>
	<!-- Testimonial Grid Section -->

<!-- Heading for Testimonials -->


<!-- Grid of Testimonial Cards -->
<section class="py-1 px-4 mb-8">
	<div class="max-w-[1536px] mx-auto">
		<h2 class="text-3xl font-semibold mb-4 text-left p-3">
			Testimonials
		  </h2>
		<div class="container mx-auto px-4 testimonial-card sm:hidden md:block">
			<div class="justify-center flex flex-wrap gap-4">
					{testimonials.map((item) => (
							<div class="w-full sm:w-1/3 md:w-1/4 lg:w-1/5 xl:w-1/5 2xl:w-1/6 flex flex-col">
									<TestimonialCard
											name_event={item.nameEvent}
											testimonial={item.testimonial}
									/>
							</div>
					))}
			</div>
		</div>
	</div>
</section>
	  <BackToTop />
	<Footer />
</Layout>

<style is:global>
	body {
		/* background-color: darkslategray; */
		color: white;
		
	}

	p,a{
		font-family: "Roboto", sans-serif;

	}

	h1,span{
		font-family: "Oswald", sans-serif;
	}
	h2,h3,h4,h5,h6{
		font-family: "Oswald", sans-serif;
		color:#172f43;
	}

	footer h2{
		font-family: "Oswald", sans-serif;
		color:white;
	}
	.testimonial-heading{
		color:#fff;

	}

	@media screen and (max-width:320px ){
		
	.testimonial-card{
		display: flex;
        flex-wrap: nowrap;
        overflow-x: auto;
	}
}
	main {
		background-image: url("../assets/background.svg");
	}
</style>
